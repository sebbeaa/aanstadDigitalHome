{
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "newLine": "lf",
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "dist/",
    "strict": false,
    "target": "ES2017",
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "~/*": ["./src/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "typings/**/*.d.ts",
    "node_modules/@*/types-*/*.d.ts",
    "sanity/schemas/documents/priv",
    "src/plugins/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
